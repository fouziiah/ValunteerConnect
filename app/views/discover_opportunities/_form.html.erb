<%= form_with(model: @create_opportunity) do |form| %>
    <div class="form-container">
      
      <div class="form-group">
        <%= form.label :title, class: 'form-label' %>
        <%= form.text_field :title, class: 'form-control', placeholder: "Enter title", value: @create_opportunity.title %>
      </div>
      
      <div class="form-group">
        <%= form.label :description, class: 'form-label' %>
        <%= form.text_area :description, class: 'form-control', placeholder: "Enter description", value: @create_opportunity.description %>
      </div>
  
      <div class="form-group">
        <%= form.label :organization_name, class: 'form-label' %>
        <%= form.text_field :organization_name, class: 'form-control', placeholder: "Enter organization name", value: @create_opportunity.organization_name %>
      </div>
      
      <div class="form-group">
        <%= form.label :location, class: 'form-label' %>
        <%= form.text_field :location, class: 'form-control', placeholder: "Enter location", value: @create_opportunity.location %>
      </div>
  
      <div class="form-group">
        <%= form.submit "Update Opportunity", class: 'btn btn-primary' %>
      </div>
      
    </div>
  <% end %>
  