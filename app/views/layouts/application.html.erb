<!DOCTYPE html>
<html>
  <head>
    <title>VolunteerConnect</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  

    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'home.css' %>
    <%= stylesheet_link_tag 'create_opportunities.css' %>
    <%= stylesheet_link_tag 'search.css' %>
    <%= stylesheet_link_tag 'volunteer.css' %>
    <%= stylesheet_link_tag 'login.css' %>
    <%= stylesheet_link_tag 'signup.css' %>
    <%= stylesheet_link_tag 'volunteer_show.css' %>
    <%= javascript_importmap_tags %>



    <%= javascript_include_tag 'https://code.jquery.com/jquery-3.6.0.min.js' %>
    <%= javascript_include_tag 'add_jquery' %>
    <%= javascript_include_tag 'api_button' %>

    
  </head>

  <body>
  <nav>
  <div class="container">
    <div class="logo">
      <%= image_tag("logo.png", alt: "logo") %>
      <span class="logo-text">VolunteerConnect</span>
    </div>
    
    <div class="nav-container">
      <ul class="navbar">
        <li><%= link_to 'Home', root_path, style: "font-size: 17px;" %></li>
        <li><%= link_to 'Volunteers', search_opportunities_path, style: "font-size: 17px;" %></li>
        <li>
          <%= user_signed_in? ? (current_user.organization? ? link_to('Organization', new_create_opportunity_path) : '') : link_to('Log in', new_user_session_path, style: 'font-size: 17px;') %>
        </li>
        <li>
          <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'sign-out' if user_signed_in? %>
        </li>
      </ul>
    </div>
  </div>
</nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
